<h1>Listing companies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>City</th>
      <th>Country</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.address %></td>
        <td><%= company.city %></td>
        <td><%= company.country %></td>
        <td><%= link_to "/companies/#{company.id}", "Show Company" %></td>
        <td><%= link_to "delete",delete_company_button(company.id) %></td>
        <td><a href="/companies/<%= company.id %>/edit">Edit Company</a> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '/companies/new', 'New Company' %>
